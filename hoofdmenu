import raadhetnummer
import galgje

def hoofdmenu():
    while True:
        print("\nWelkom bij de Nano App Store!")
        print("Kies een spel om te spelen:")
        print("1. Nummer Raad Spel")
        print("2. Galgje")
        print("3. Afsluiten")

        keuze = input("Voer je keuze in (1, 2, of 3): ")

        if keuze == '1':
            raadhetnummer.nummer_raad_spel()  # Start het nummer raad spel
        elif keuze == '2':
            woordenlijst = galgje.laad_woorden('woorden.txt')  # Laad de woorden voor Galgje via galgje module
            if woordenlijst:
                galgje.speel_galgje(woordenlijst)  # Start Galgje via galgje module
            else:
                print("Kan het spel niet starten zonder woorden.")
        elif keuze == '3':
            print("Bedankt voor het spelen! Tot ziens!")
            break  # Sluit de applicatie af
        else:
            print("Ongeldige keuze, probeer opnieuw.")  # Herhaal als de keuze ongeldig is

if __name__ == "__main__":
    hoofdmenu()  # Zorg ervoor dat het hoofdmenu hier wordt aangeroepen
