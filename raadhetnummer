import random

def nummer_raad_spel():
    # Instellen van het bereik en aantal pogingen
    max_num = 100  # Het maximale getal dat geraden kan worden
    pogingen = 7   # Aantal pogingen

    # Willekeurig nummer genereren
    geheim_nummer = random.randint(1, max_num)

    print(f"Welkom bij het Nummer Raad Spel!")
    print(f"Ik heb een nummer gekozen tussen 1 en {max_num}. Je hebt {pogingen} pogingen om het te raden.")

    # For-loop om de gebruiker te laten raden
    for poging in range(1, pogingen + 1):
        try:
            gok = int(input(f"Poging {poging}: Raad het nummer: "))
        except ValueError:
            print("Dat is geen geldig nummer, probeer opnieuw!")
            continue

        if gok < geheim_nummer:
            print("Het nummer is hoger.")
        elif gok > geheim_nummer:
            print("Het nummer is lager.")
        else:
            print(f"Gefeliciteerd! Je hebt het nummer {geheim_nummer} geraden in {poging} pogingen!")
            break
    else:
        print(f"Helaas, je hebt geen pogingen meer over. Het nummer was {geheim_nummer}.")

if __name__ == "__main__":
    nummer_raad_spel()
